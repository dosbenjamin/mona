extends ../default.pug

block settings
  - const controller = 'settings'
  - const action = 'index'
  - const title = 'Panneau d\'administration'

include ../components/input.pug

block content
  form(class="grid grid-cols-2 gap-x-12 gap-y-6 mt-10")
    +input('Nom*', 'Aldi', 'lastname')
    +input('Prénom*', 'Aldi', 'firstname')
    +input('Adresse*', 'Aldi', 'address')
    +input('Code postal*', 'Aldi', 'zip')
    +input('Ville*', 'Aldi', 'city')
    +input('Pays', 'Aldi', 'country')
    +input('Adresse e-mail*', 'Aldi', 'email')
    +input('N° de téléphone*', 'Aldi', 'phone')
    +input('Taux horaire HTVA*', 'Aldi', 'rate')
    +input('IBAN*', 'Aldi', 'iban')
    +input('Numéro d\'entreprise', 'Aldi', 'company')

    button(class="rect-rounded-full border-blue bg-blue text-white uppercase text-small ml-auto mt-auto" type="button" data-click="saveSettings") Enregister

  div(class="mt-20 flex justify-center")
    input(class="invisible w-0" type="file" data-change="importData")
    button(class="rect-rounded-full border-blue bg-blue text-white uppercase text-small" type="button" data-click="triggerImport") Importer des données
    a(class="rect-rounded-full cursor-pointer border-blue bg-blue text-white uppercase text-small ml-12" type="button" data-click="exportData") Exporter des données

    button(class="rect-rounded-full bg-blue text-white uppercase text-small ml-12 js-google-authorize" data-click="googleSignIn" type="button") Se connecter à Google
    button(class="rect-rounded-full bg-blue text-white uppercase text-small ml-12 js-google-signout " data-click="googleSignOut" type="button") Se déconnecter de Google
